<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat">
    </style>

    <style name="Text.Regular">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Light">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Regular.Medium">
        <item name="android:textSize">@dimen/low_text</item>
    </style>


    <style name="Text.Regular.Small">
        <item name="android:textSize">@dimen/little_text</item>
    </style>

    <style name="Text.Bold.Small">
        <item name="android:textSize">@dimen/little_text</item>
    </style>

    <style name="Text.Bold.Medium">
        <item name="android:textSize">@dimen/low_text</item>
    </style>

    <style name="Text.Regular.Medium.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="Text.Regular.Small.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text.Regular.Medium.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="Text.Regular.Small.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>